---
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description: string;
	date: string;
	image: string;
	tags: string[];
	url: string;
}

const { title, description, date, image, tags, url } = Astro.props;
---
<article class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-lg transition-transform hover:scale-105">
	<a href={url}>
		<img src={image} alt={title} class="w-full h-48 object-cover" />
		<div class="p-6">
			<div class="flex gap-2 mb-4">
				{tags.map((tag) => (
					<span class="px-2 py-1 bg-blue-100 dark:bg-blue-900 text-blue-800 dark:text-blue-100 text-sm rounded-full">
						{tag}
					</span>
				))}
			</div>
			<h3 class="text-xl font-bold mb-2">{title}</h3>
			<p class="text-gray-600 dark:text-gray-300 mb-4">{description}</p>
			<time class="text-sm text-gray-500 dark:text-gray-400">{new Date(date).toLocaleDateString()}</time>
		</div>
	</a>
</article>