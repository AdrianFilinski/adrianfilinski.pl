---
import TimelineItem from './TimelineItem.astro';
---
<section class="py-12">
    <h2 class="text-2xl font-bold mb-8">Career Timeline</h2>
    <div class="space-y-0">
        <TimelineItem 
            year="2023.09 - Present"
            title="Salesforce Marketing Cloud Developer"
            company="Finally"
            description="Leading development of enterprise web applications using modern JavaScript frameworks and Salesforce technologies."
        />
        <TimelineItem 
            year="2022.02 - 2023.08"
            title="Marketing Automation Specialist"
            company="T-Mobile"
            description="Developed and maintained Salesforce applications, created custom components, and implemented automation solutions."
        />
        <TimelineItem 
            year="2021.07 - 2022.01"
            title="Junior Marketing Automation Specialist"
            company="Empik Group"
            description="Built responsive websites and web applications using React, Node.js, and various modern web technologies."
        />
    </div>
</section>